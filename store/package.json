{
    "type": "module",
    "version": "2.0.1",
    "name": "@slimlib/store",
    "description": "Simple Proxy-based store for SPA",
    "license": "MIT",
    "author": "Konstantin Shutkin",
    "main": "./dist/index.mjs",
    "module": "./dist/index.mjs",
    "exports": {
        ".": {
            "types": "./types/index.d.ts",
            "default": "./dist/index.mjs"
        },
        "./package.json": "./package.json"
    },
    "types": "./types/index.d.ts",
    "files": [
        "src",
        "types",
        "dist"
    ],
    "repository": {
        "type": "git",
        "url": "git+https://github.com/kshutkin/slimlib.git",
        "directory": "store"
    },
    "bugs": "https://github.com/kshutkin/slimlib/issues",
    "homepage": "https://github.com/kshutkin/slimlib/blob/main/store/README.md",
    "keywords": [
        "@slimlib",
        "store",
        "proxy"
    ],
    "scripts": {
        "build": "rollup -c && dts-buddy -m @slimlib/store:./src/index.ts",
        "test": "vitest run --coverage --config ../vitest.config.mjs",
        "bench": "node tests/benchmark.mjs -n 50 -f ./results.csv",
        "build-compress": "BUILD_COMPRESS=true rollup -c && dts-buddy -m @slimlib/store:./src/index.ts",
        "prepack": "pkgprn-internal --remove-sourcemaps --strip-comments --flatten=dist,types",
        "deopt": "node --trace-deopt tests/deopt-check.mjs 2>&1 | grep -i deoptimiz || echo 'No deoptimizations detected!'",
        "deopt:report": "node --trace-deopt tests/deopt-check.mjs 2>&1 | node tests/deopt-check.mjs --parse",
        "deopt:full": "node --trace-deopt --trace-opt tests/deopt-check.mjs",
        "deopt:opt": "node --trace-opt tests/deopt-check.mjs 2>&1 | grep -i optimiz"
    },
    "dependencies": {
        "esm-env": "^1.2.1"
    },
    "devDependencies": {
        "@angular/core": "^21.2.0",
        "@jridgewell/remapping": "^2.3.5",
        "@preact/signals-core": "^1.13.0",
        "@reactively/core": "^0.0.8",
        "@rollup-extras/plugin-clean": "^1.3.9",
        "@rollup-extras/plugin-externals": "^1.2.2",
        "@rollup/plugin-commonjs": "^29.0.0",
        "@rollup/plugin-json": "^6.1.0",
        "@rollup/plugin-node-resolve": "^16.0.3",
        "@rollup/plugin-terser": "^0.4.4",
        "@vue/reactivity": "^3.5.29",
        "alien-signals": "^3.1.2",
        "estree-walker": "^3.0.3",
        "magic-string": "^0.30.21",
        "rollup": "^4.59.0",
        "rollup-plugin-typescript2": "^0.36.0",
        "rxjs": "^7.8.2",
        "solid-js": "^1.9.11",
        "svelte": "^5.53.6"
    }
}
