{
    "include": ["src", "tests"],
    "compilerOptions": {
        "lib": ["dom", "esnext"],
        "target": "esnext",
        "module": "esnext",
        "esModuleInterop": true,
        "strict": true,
        "noUncheckedIndexedAccess": true,
        "moduleResolution": "node",
        "skipLibCheck": true,
        "allowJs": true,
        "checkJs": true,
        "noEmit": true,
        "composite": true
    }
}
